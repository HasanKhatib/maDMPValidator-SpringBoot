{{>header}}

<!-- Services Section -->
<section class="page-section" id="messagesArea">
    <div class="container ">
        <div class="">
            <h1>
                {{title}}
            </h1>
            <div class="form-group">
                <a href="https://github.com/HasanKhatib/maDMPValidator-SpringBoot" target="_blank">
                    <img src="/imgs/hasankhatib-maDMPValidator-SpringBoot.svg" alt="HasanKhatib Github badge"></a>
                <a href="https://spring.io/guides/tutorials/spring-boot-kotlin/" target="_blank">
                    <img src="/imgs/SpringBoot-Kotlin.svg" alt="">
                </a>

            </div>
            <p>
                This tool is based on <a href="https://github.com/hertai86/Validating-machine-actionable-DMP"
                                         target="_blank">the maDMP Schema Validation Project.</a>
                Beside conforming machine-actionable DMPs to RDA common standard, it adds custom validation for specific vocabs determined by the deploying institution.
            </p>
        </div>
        <form method="POST">
            <textarea id="dataID" placeholder="Paste your maDMP here"></textarea>
        </form>
        <div>

            <button class="btn btn-primary btn-xl js-scroll-trigger" onclick="validate()"
                    type="button">Validate</button>

            <a href="https://github.com/hertai86/Validating-machine-actionable-DMP/tree/master/testingExamples"
               target="_blank" class="btn btn-danger btn-xl float-right mx-1">
                maDMP sample file! <i class="fas fa-external-link-alt"></i>
            </a>
            <a href="https://github.com/hertai86/Validating-machine-actionable-DMP/blob/master/schema.json" target="_blank"
               class="btn btn-dark btn-xl float-right mx-1">
                RDA JSON schema file! <i class="fas fa-external-link-alt"></i>
            </a>

            <label id="validationMessage"></label>
            <label id="schemaErrorPath"></label>
            <label id="schemaErrorMessage"></label>
            <label id="schemaAllowedEnums"></label>

        </div>

    </div>
</section>

